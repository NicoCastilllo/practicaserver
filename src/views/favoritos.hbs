{{> nav}}

{{#each favoritos}}

        <div class="card mt-3" style="width: 18rem;">
        <img src="./img/{{img}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h2>{{title}}</h2>
                <p>{{desc}}</p>
                <form action="/favoritos?_method=DELETE" method="post">
                    <input type="hidden" name="_id" value={{_id}}>
                    <button type="submit">Quitar de favoritos</button>
                </form>
                <p class="comentarioborder">{{comments}}</p>
            </div>
        </div>
{{/each}}