{{> nav}}
<form action="/usuario" method="post" enctype="multipart/form-data">
    <input placeholder="Titulo de tu post" name="title" required>
    <input placeholder="Descripcion del post" name="desc" required>
    <input type="file" name="img" accept="image/x-png,image/gif,image/jpeg" required>
    <button type="submit">Postear</button>
</form>

{{#each posteos}}
<div class="card mt-3" style="width: 18rem;">
  <img src="./img/{{img}}" class="card-img-top imagen" alt="...">
  <div class="card-body carta">
    <h2>{{title}}</h2>
    <p>{{desc}}</p>
    <button id="editar{{_id}}" >Editar</button>
    <form action="/usuario?_method=DELETE" method="post">
        <input type="hidden" name="_id" value={{_id}}>
        <button type="submit">Borrar post</button>
    </form>
  </div>
  <div id="formEditar">
    <form action="/usuario?_method=PUT" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_id" value={{_id}}>
        <input name="title" value="{{title}}">
        <input name="desc" value="{{desc}}">
        <input name="img" type="hidden" value="{{img}}">
        <input type="file" name="img" accept="image/x-png,image/gif,image/jpeg">
        <button type="submit">Guardar</button>
    </form>
  </div>
</div>
{{/each}}